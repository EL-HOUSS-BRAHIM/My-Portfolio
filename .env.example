# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_username
DB_PASS=your_password
DB_CHARSET=utf8mb4

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_ENCRYPTION=tls
FROM_EMAIL=your_email@gmail.com
FROM_NAME="Your Name"
TO_EMAIL=your_email@gmail.com
TO_NAME="Your Name"

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
SECRET_KEY=your_super_secret_jwt_key_here
SESSION_LIFETIME=7200
PASSWORD_MIN_LENGTH=8
CSRF_TOKEN_LIFETIME=3600

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_TEMP_DIR=/tmp
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85

# Application Settings
APP_NAME="Brahim El Houss Portfolio"
APP_URL=https://brahim-crafts.tech
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_TESTIMONIALS=5
RATE_LIMIT_TESTIMONIALS_WINDOW=3600
RATE_LIMIT_CONTACT=10
RATE_LIMIT_CONTACT_WINDOW=3600
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_WINDOW=900

# Admin Configuration
ADMIN_SESSION_LIFETIME=28800
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=1800

# Cache Configuration
CACHE_ENABLED=true
CACHE_TESTIMONIALS_TTL=300
CACHE_ADMIN_TTL=180

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/portfolio.log
ERROR_LOG=logs/error.log
ACCESS_LOG=logs/access.log

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Social Media Links
LINKEDIN_URL=https://linkedin.com/in/your-profile
GITHUB_URL=https://github.com/your-username
TWITTER_URL=https://twitter.com/your-handle
INSTAGRAM_URL=https://instagram.com/your-handle

# SEO Configuration
SITE_TITLE="Brahim El Houss - Full Stack Developer"
SITE_DESCRIPTION="Professional portfolio of Brahim El Houss, showcasing full stack development skills and projects"
SITE_KEYWORDS="full stack developer, web development, portfolio, programming"
