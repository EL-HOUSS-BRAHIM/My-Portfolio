{
  "name": "portfolio-tests",
  "version": "1.0.0",
  "description": "Test suite for portfolio website",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest tests/js/unit",
    "test:integration": "jest tests/js/integration",
    "lint:js": "eslint assets/js-clean/**/*.js",
    "lint:css": "stylelint assets/css/**/*.css",
    "lint:fix": "eslint assets/js-clean/**/*.js --fix && stylelint assets/css/**/*.css --fix"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/js/setup.js"],
    "collectCoverageFrom": [
      "assets/js-clean/**/*.js",
      "!assets/js-clean/**/*.min.js"
    ],
    "coverageDirectory": "tests/coverage",
    "coverageReporters": ["text", "html", "lcov"],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/assets/js-clean/$1"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0",
    "stylelint": "^15.6.0",
    "stylelint-config-standard": "^33.0.0"
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", {
        "targets": {
          "node": "current"
        }
      }]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "plugins": ["jest"],
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "stylelint": {
    "extends": ["stylelint-config-standard"],
    "rules": {
      "indentation": 2,
      "max-empty-lines": 2,
      "declaration-empty-line-before": null,
      "custom-property-empty-line-before": null
    }
  }
}